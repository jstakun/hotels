<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

  <bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">  
    	<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
    	<property name="searchSystemEnvironment" value="true" />
  </bean> 
  
  <bean id="cloudDb" class="com.mongodb.Mongo">
     <constructor-arg index="0"> 
        <bean class="com.mongodb.MongoURI"> 
            <!-- constructor-arg index="0" value="mongodb://${OPENSHIFT_MONGODB_DB_USERNAME}:${OPENSHIFT_MONGODB_DB_PASSWORD}@${OPENSHIFT_MONGODB_DB_HOST}:${OPENSHIFT_MONGODB_DB_PORT}/cache" /-->
            <constructor-arg index="0" value="mongodb://jstakun:manager1@127.7.189.130:27017/cache" />  
        </bean> 
    </constructor-arg>
  </bean>

  <camelContext xmlns="http://camel.apache.org/schema/spring" trace="false">
    <restConfiguration bindingMode="auto" component="servlet" contextPath="/camel" />
     
    <rest>
  		<get uri="/v1/cache/{id}">
    		<to uri="direct:getFromCache"/>
  		</get>
  		<post uri="/v1/cache/{id}">
    		<to uri="direct:putToCache"/>
  		</post>
  		<delete uri="/v1/cache/{id}">
    		<to uri="direct:deleteFromCache"/>
  		</delete>
	</rest>
    
    
    <route customId="true" id="Put to cache">
    	<from uri="direct:putToCache"/>
    	<log message="Put to cache: ${header.id} -> ${body}" loggingLevel="INFO"/>
    	<to uri="mongodb:cloudDb?database=cache&amp;collection=testing&amp;operation=save"/>
    </route>
    
    <route customId="true" id="Get from cache">
    	<from uri="direct:getFromCache"/>
    	<log message="Get from cache: ${header.id}" loggingLevel="INFO"/>
    </route>
    
    <route customId="true" id="Delete from cache">
    	<from uri="direct:deleteFromCache"/>
    	<log message="Delete from cache: ${header.id}" loggingLevel="INFO"/>
    </route>
  </camelContext>

</beans>
