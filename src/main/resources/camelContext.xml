<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

  <bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">  
    	<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
    	<property name="searchSystemEnvironment" value="true" />
  </bean> 
  
  <bean id="cloudDb" class="com.mongodb.Mongo">
     <constructor-arg index="0"> 
        <bean class="com.mongodb.MongoURI"> 
            <constructor-arg index="0" value="${OPENSHIFT_MONGODB_DB_URL}cache" />
        </bean> 
    </constructor-arg>
  </bean>
  
  <camelContext id="CacheManager" xmlns="http://camel.apache.org/schema/spring" trace="false">
    
    <dataFormats>
        <json id="json" library="Jackson"/>
    </dataFormats>
    
    <restConfiguration bindingMode="auto" component="servlet" contextPath="/camel" />
     
    <rest>
  		<get uri="/v1/cache/{cid}">
    		<to uri="direct:getFromCache"/>
  		</get>
  		<get uri="/v1/cache/{cid}/{property}/{value}">
    		<to uri="direct:getByQueryFromCache"/>
  		</get>
  		<post uri="/v1/cache/{cid}">
    		<to uri="direct:putToCache"/>
  		</post>
  		<post uri="/v1/cache/multi/{cid}">
    		<to uri="direct:putToCacheMulti"/>
  		</post>
  		<delete uri="/v1/cache/{cid}/{property}/{value}">
    		<to uri="direct:deleteFromCache"/>
  		</delete>
	</rest>
     
    <route customId="true" id="Put to cache">
    	<from uri="direct:putToCache"/>
    	<log message="Put to cache ${header.cid} document ${body}" loggingLevel="INFO"/>
    	<recipientList>
    		<simple>mongodb:cloudDb?database=cache&amp;collection=${header.cid}&amp;operation=save</simple>
    	</recipientList>
    	<setBody>
          	<header>CamelMongoOid</header>
        </setBody>
    </route>   
    
    <route customId="true" id="Put to cache multiple records">
    	<from uri="direct:putToCacheMulti"/>
    	<log message="Put to cache ${header.cid} multiple documents ${body}" loggingLevel="INFO"/>
    	<marshal ref="json"/>
    	<split parallelProcessing="true">
    		<method>net.gmsworld.server.camel.JsonArraySplitter</method>
    		<to uri="direct:putToCache" />
    	</split>  
    </route>	
    
    <route customId="true" id="Get from cache">
    	<from uri="direct:getFromCache"/>
    	<log message="Get all from cache ${header.cid}" loggingLevel="INFO"/>
    	<setHeader headerName="CamelMongoDbSortBy">
        	<simple>{"_id" : -1}</simple>
        </setHeader>
    	<recipientList>
    		<simple>mongodb:cloudDb?database=cache&amp;collection=${header.cid}&amp;operation=findAll</simple>
    	</recipientList>
    </route>
    
    <route customId="true" id="Get by query from cache">
    	<from uri="direct:getByQueryFromCache"/>
    	<log message="Get from cache ${header.cid} object matching ${header.property} : ${header.value}" loggingLevel="INFO"/>
    	<setBody>
          	<simple>{"${header.property}" : "${header.value}"}</simple>
        </setBody>
        <setHeader headerName="CamelMongoDbSortBy">
        	<simple>{"_id" : -1}</simple>
        </setHeader>
        <setHeader headerName="CamelMongoDbLimit">
        	<constant>1</constant>
        </setHeader>
        <recipientList>
    		<simple>mongodb:cloudDb?database=cache&amp;collection=${header.cid}&amp;operation=findAll</simple>
    	</recipientList>
    </route>
    
    <route customId="true" id="Delete from cache">
    	<from uri="direct:deleteFromCache"/>
    	<log message="Delete from cache ${header.cid} objects matching ${header.property} : ${header.value}" loggingLevel="INFO"/>
    	<setBody>
          	<simple>{"${header.property}" : "${header.value}"}</simple>
        </setBody>
    	<recipientList>
    		<simple>mongodb:cloudDb?database=cache&amp;collection=${header.cid}&amp;operation=remove</simple>
    	</recipientList>
    	<setBody>
          	<header>CamelMongoDbRecordsAffected</header>
        </setBody>
    </route>
  
  </camelContext>

</beans>
